<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/MainLinear"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#f5f5f5"
              android:orientation="vertical"
              android:layout_marginStart="20dp"
              android:layout_marginEnd="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageViewContactAvatarWindowAfterCall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#e0e0e0"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewContactNameWindowAfterCall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Номер телефона звонящего"
                android:textColor="#000000"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textViewContactNumberWindowAfterCall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XXX"
                android:textColor="#000000"
                android:textSize="22dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:textColor="#212121"
        android:id="@+id/textViewTimerCurrencyTextWindowAfterCall"
        android:layout_margin="6dp"
        android:text="60min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:text="60"/>

    <SeekBar
        android:layout_margin="6dp"
        android:id="@+id/seekBarMinutesDownTimerWindowAfterCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="1"
        android:max="60"
        />

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="#212121"
            android:id="@+id/textViewCancelTextWindowAfterCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Закрыть"/>

        <TextView
            android:textColor="#212121"
            android:id="@+id/textViewOnlyIgnoreTextWindowAfterCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ignore"/>

        <TextView
            android:textColor="#212121"
            android:id="@+id/textViewIgnoreAndSendSMSTextWindowAfterCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SMS"/>

    </LinearLayout>

</LinearLayout>